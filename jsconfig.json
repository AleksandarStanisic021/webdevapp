{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "jsx": "preserve",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "*.js",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
